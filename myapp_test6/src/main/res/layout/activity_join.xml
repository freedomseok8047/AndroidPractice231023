<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginFormActivity">

    <!--카드뷰 사용 해보기.-->
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/resultUserImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/user_basic"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/galleryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="갤러리"
            android:layout_weight="1"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/cameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카메라"
            android:layout_weight="1"
            android:textSize="20sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름을 입력해주세요."
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하기."
        android:inputType="text"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textViewEamil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일을 입력해주세요."
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력하기."
        android:inputType="text"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="패스워드를 입력해주세요."
        android:textSize="20sp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="패스워드를 입력하기."
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textViewPW_Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="패스워드 확인해주세요."
        android:textSize="20sp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/editTextPW_Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="패스워드를 확인하기."
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호를 입력해주세요."
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호를 입력하기."
        android:inputType="text"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소를 입력해주세요."
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="주소를 입력하기."
        android:inputType="text"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/buttonJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입하기"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/buttonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원정보 보기"
        android:textSize="20sp"/>


</LinearLayout>

</ScrollView>